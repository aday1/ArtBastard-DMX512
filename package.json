{
  "name": "artbastard-dmx",
  "version": "1.0.0",
  "private": true,
  "description": "ArtBastard DMX512 Controller",
  "main": "dist/server.js",  "scripts": {
    "install-all": "npm install && cd react-app && npm install && cd ../launcher && npm install",
    "build": "npm run build-backend && npm run build-frontend",
    "build-backend": "node build-backend.js",
    "build-frontend": "cd react-app && npm run build",
    "start": "node dist/main.js",
    "dev": "nodemon src/main.ts",
    "copy-static": "copyfiles -u 1 src/public/**/* dist",
    "watch": "npx tsc -w",
    "start-launcher": "node start-launcher.js",
    "build-launcher": "cd launcher && npm run build && mkdir -p ../launcher-dist && cp -r dist/* ../launcher-dist"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@julusian/midi": "^3.6.1",
    "@types/cors": "^2.8.17",
    "@types/ping": "^0.4.4",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dmxnet": "^0.9.0",
    "easymidi": "^3.1.0",
    "express": "^4.21.0",
    "framer-motion": "^12.15.0",
    "osc": "^2.4.3",
    "ping": "^0.4.4",
    "react-draggable": "^4.4.6",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.41.1",
    "@types/express": "^5.0.0",
    "@types/node": "^18.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
