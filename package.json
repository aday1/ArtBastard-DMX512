  "keywords": [
    "dmx",
    "dmx512",
    "lighting",
    "artnet",
    "theater",
    "stage",
    "lighting-control",
    "midi",
    "osc",
    "photonic",
    "lighting-design",
    "theatrical-lighting"
  ],
  "author": "Le Créateur des Lumières",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aday1/ArtBastard-DMX512.git"
