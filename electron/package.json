{
  "name": "artbastard-electron",
  "version": "1.0.0",
  "description": "ArtBastard DMX512 - Electron Desktop App",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "build": "echo 'No build needed for Electron - using existing React build'",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.artbastard.dmx512",
    "productName": "ArtBastard DMX512",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "../dist/**/*",
      "../react-app/dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "dist"
      },
      {
        "from": "../react-app/dist",
        "to": "react-dist"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "easymidi": "^3.1.0",
    "midi": "^2.0.0"
  }
}
